<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.ronasit.fiesta.ui.login.signin.SignInVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="87dp"
            android:background="@drawable/ic_fiesta_logo" />

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="75dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/edit_text_shape"
            android:hint="@string/phone_field_placeholder"
            android:inputType="numberSigned"
            android:padding="14dp"
            android:textAlignment="center"
            android:text="@={viewModel.phoneNumber}"/>

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_field"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/confirmation_button_shape"
            android:onClick="@{()->viewModel.onContinueClick()}"
            android:padding="14dp"
            android:text="@string/continue_button_text"
            android:textColor="@android:color/white" />


    </RelativeLayout>
</layout>