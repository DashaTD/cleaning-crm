<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">Montserrat</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="InputHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="MediumTextBold" parent="ButtonTextAppearance">
        <item name="android:textColor">#000</item>
    </style>

    <style name="TitleTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="TitleTextWhite" parent="TitleTextBlack">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="SmallTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SmallTextGray" parent="SmallTextBlack">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="SmallTextPink" parent="SmallTextBlack">
        <item name="android:textColor">#D24C95</item>
    </style>
    <style name="SmallTextWhite" parent="SmallTextBlack">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="LargeButton" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:background">@drawable/confirmation_button_shape</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextStyle</item>

        <item name="android:background">@drawable/rounded_normal_unfocused_eddittext</item>
        <item name="android:padding">14dp</item>
    </style>

</resources>
